{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Siemens SCL",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.Siemens SCL",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.Siemens SCL",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.Siemens SCL",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.scl"
}